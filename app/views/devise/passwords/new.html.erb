<div class="log-in-container">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "ui form") do |f| %>
  <%= image_tag("logo.png",class:"logo") %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", required: true, class:"input" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
