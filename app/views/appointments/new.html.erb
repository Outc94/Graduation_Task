<h1>New Appointment</h1>
<%= form_with(model: [@doctor, @appointment], local: true, class: "ui form" ) do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.collect { |p| [p.full_name, p.id]} %>
  <br />
  <%= f.label :doctor %>
  <%= f.select :doctor_id, @doctors.collect { |p| [p.name, p.id]} %>
  <br />
  <%= f.label :date %>
  <%= f.date_field :date, required: true, placeholder: "Date.Month.Year" %>
  <br />
  <%= f.label :time %>
  <%= f.time_field :time, required: true, placeholder: "Hours:Minutes" %>
  <br />
  <br />
  <%= f.submit nil, class: "ui green button inverted" %>
  <%= link_to 'Quit', appointments_path, class:"ui button blue inverted" %>
<% end %>
