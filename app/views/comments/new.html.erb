<h1>Add Comment For <%= @doctor.name %></h1>
<%= form_with(model: [@doctor, @comment], local: true, class: "ui form" ) do |f| %>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message, required: true, placeholder: "Message", rows: 10, autofocus: true %>
  </div>
  <%= f.submit nil, class: "ui blue button" %>
<% end %>
